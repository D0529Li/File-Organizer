<Window x:Class="File_Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="clr-namespace:File_Organizer"
        Title="File Organizer" Height="800" Width="1300" WindowStartupLocation="CenterScreen" >
    <Grid Background="Pink">
        <TabControl FontSize="30" FontFamily="Comic Sans MS">
            <TabItem Header="Organizer" Width="350" Margin="100,0,-290,0">
                <d:OrganizerUserControl />
            </TabItem>
            <TabItem Header="Selector" Width="350" Margin="400,0,-450,1">
                <d:SelectorUserControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
